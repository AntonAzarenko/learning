<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.azarenka.repository.FurnitureRepository">

    <resultMap type="Furniture" id="furniture">
        <id column="id" property="id"/>
        <result column="title" property="title"/>
    </resultMap>

    <select id="getCountVendorsByTitleManufacturer" resultType="Vendor">
        SELECT
        count(*)
        FROM
        main.vendors f
        join main.vendor_to_manufacturer_map m ON f.id=m.vendor_id
        join main.manufacturer mf ON mf.id = m.manufacturer_id
        where mf.title = #{title}
    </select>
</mapper>